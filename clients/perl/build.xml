<project name="selenium" default="generate-sources">
	<target name="generate-sources">
    	<ant dir=".." target="extract-xml"/>
    	<mkdir dir="WWW" />
    	<xslt in="../iedoc.xml" out="WWW/Selenium.pm" style="iedoc2perl.xml"/>
    </target>
    <target name="doc" depends="generate-sources">
    	<property name="perl.executable" value="perl" />
    	<mkdir dir="html"/>
    	<property name="outfile" location="html/selenium.html" />
    	<exec executable="${perl.executable}" failonerror="true">
			<arg value="mypod2html.pl"/>
			<arg value="--infile=WWW/Selenium.pm" />
			<arg value="--outfile=${outfile}" />
		</exec>
    </target>
    <target name="all" depends="generate-sources, test, doc"/>
    <target name="test" depends="generate-sources">
    	<ant dir=".." target="start-server" />
        <!--  output="${tmp}/ruby_out.txt" -->
        <property name="perl.executable" value="perl" />
        <!--<fail message="autofail ${perl.executable}" />-->
        <exec executable="${perl.executable}" resultproperty="result">
            <arg line="test_google.pl"/>
        </exec>
        <ant dir=".." target="stop-server" />
        <condition property="build.failed">
        	<not><equals arg1="0" arg2="${result}" /></not>
        </condition>
        <fail if="build.failed" message="perl tests failed!" />
    </target>
    <target name="clean">
    	<mkdir dir="WWW" />
    	<delete dir="WWW" />
    	<mkdir dir="html" />
    	<delete dir="html" />
    </target>
</project>
