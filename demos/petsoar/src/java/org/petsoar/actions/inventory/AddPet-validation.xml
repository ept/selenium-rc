<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0//EN"
    "http://www.opensymphony.com/xwork/xwork-validator-1.0.dtd">
<validators>
    <field name="pet.name">
        <field-validator type="requiredstring">
            <message>Please enter a valid pet name. You entered "${pet.name}".</message>
        </field-validator>
    </field>

    <field name="pet.category.id">
        <field-validator type="field-expression">
            <param name="expression"><![CDATA[ pet.category != null && pet.category.id > 0]]></param>
            <message>You must categorize this pet.</message>
        </field-validator>
     </field>
</validators>